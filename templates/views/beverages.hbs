<html>
    <head>
        <title>
            Beverages
        </title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/beverages-styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </head>
    <body style="color: black;">
        <div class="clearfix">
            {{>header}}
        </div>

        <div class="main-content">
            {{# each products}}
                <div class="row">
                    {{# each this}}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <img src="{{this.imagePath}}" alt="" class="img-responsive">
                                <div class="caption">
                                    <h3>{{this.title}}</h3>
                                    <p class="description">{{this.description}}</p>
                                    <div class="clearfix">
                                        <div class="price pull-left">Rs{{this.price}}</div>
                                        <a href="cart/{{this._id}}" class="addtocart pull-right" role="button"> Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
                
            {{/each}}
            

        </div>

        {{>footer}}
    </body>
</html>