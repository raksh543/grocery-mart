<html>

<head>
  <title>
    Sign up
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="icon" href="/img/grocery2.png">
  <link rel="stylesheet" href="/css/register.css">
  <link rel="stylesheet" href="/css/login_styles.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

</head>

<body style="background-color: rgb(233, 233, 233);">

<!--This will be displaiyed for large screens-->
  <div class="main-content displayonlg">
    {{>header}}

    <div id="login-box">
      <div class="left">
        <h1 style="color: black;">Sign up</h1>
        <hr>
        <form action="/doSignup" method="POST">
          {{# if hasErrors}}
          <div class="crow">
            {{# each messages }}
            <center>
              <p
                style="color: maroon; border-color:maroon;border-radius:4px;width:100%;background-color:rgb(250, 161, 161);padding:10px">
                {{this}} </p>
            </center>
            {{/each}}

          </div>

          {{/if}}

          <input class="typeOne" type="text" name="name" placeholder="Username" required />
          <input class="typeOne" type="email" name="email" placeholder="E-mail" required />
          <input class="typeOne" type="password" name="password" placeholder="Password" minlength="7" required />
          <input class="typeOne" type="password" name="passwordTwo" placeholder="confirm password" minlength="7" required />
          <p style="color: red;">{{msg1}}</p>
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <input type="submit" value="Sign up" />
        </form>
      </div>

      <div class="right">
        <form action="/doSignin" method="POST">
          <span class="loginwith">Have an account?<br />Log In</span>
          {{# if hasErrors}}
          <div class="crow">
            {{# each messages }}
            <center>
              <p
                style="color: maroon; border-color:maroon;border-radius:4px;width:100%;background-color:rgb(250, 161, 161);padding:10px">
                {{this}} </p>
            </center>
            {{/each}}

          </div>

          {{/if}}
          <button class="social-signin google">Enter registered email</button>
          <input class="typeOne" type="email" name="email" placeholder="email" />
          <input class="typeOne" type="password" name="password" placeholder="Password" />
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <button class="social-signin google">Log In</button>
        </form>
      </div>
      <div class="or"><i class="fa fa-sign-in" style="font-size:20px;margin-top:10px;color:black"></i> </div>
    </div>

  </div>


<!--This will be displaiyed for small screens-->
  <div class="main-content displayonsm">
    {{>header}}

    <div class="ccontainer" style="background-color: lightyellow;">
      <div class="crow">
        <div class="ccol-25">
        </div>
        <div class="ccol-75">
          <p style="float: left; color:black">Already have an account?</p>
          <button id="input_signin" style="background-color: green;float:right;margin-right:5%;border-radius:4px"><a
              href="signin" style="color: white;text-decoration:none">Log in here</a></button>
        </div>
      </div>
    </div>

    <div class="ccontainer">
      <form method="POST" action="/doSignup">

        <div class="crow" style="color: black;">
          <center>
            <span id="headings">Create Account</span id="headings"><br><br>
            <img src="https://i.ibb.co/2yHwRKg/fb.png">
            <img src="https://i.ibb.co/KV23QM7/google.png">
            <img src="https://i.ibb.co/G2J5c5B/linkedin.png"><br><br>
            <p>or use your email for registration</p><br><br>
          </center>
        </div>
        {{# if hasErrors}}
        <div class="crow">
          {{# each messages }}
          <center>
            <p
              style="color: maroon; border-color:maroon;border-radius:4px;width:100%;background-color:rgb(250, 161, 161);padding:10px">
              {{this}} </p>
          </center>
          {{/each}}

        </div>

        {{/if}}
        <div class="crow">

          <div class="ccol-25">
            <label for="name" style="color: black;">Enter name</label>
          </div>
          <div class="ccol-75">
            <input id="n1" type="text" name="name" style="color: black;" placeholder="Your name..." required></input>
          </div>
        </div>
        <div class="crow">
          <div class="ccol-25">
            <label for="email" style="color: black;">Email</label>
          </div>
          <div class="ccol-75">
            <input id="e1" type="email" name="email" style="color: black;" placeholder="Your email.." required></input>
          </div>
        </div>
        <div class="crow">
          <div class="ccol-25">
            <label for="country" style="color: black;">Country</label>
          </div>
          <div class="ccol-75">
            <select id="country" name="country" style="color: black;">
              <option value="australia">India</option>
              <option value="canada">Canada</option>
              <option value="usa">USA</option>
            </select>
          </div>
        </div>
        <div class="crow">
          <div class="ccol-25">
            <label for="subject" style="color: black;">Enter password</label>
          </div>
          <div class="ccol-75">
            <input id="p1" type="password" name="password" required minlength="7" style="color: black;"
              placeholder="Your password.."></input>
          </div>
        </div>
        <div class="crow">
          <div class="ccol-25">
            <label for="subject" style="color: black;">Re-enter password</label>
          </div>
          <div class="ccol-75">
            <input id="p2" type="password" name="passwordTwo" style="color: black;" required minlength="7"
              placeholder="confirm password.."></input>
            <p style="color: red;">{{msg1}}</p>
          </div>
        </div>
        <div class="crow">
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <input type="submit" onclick="sendResponse()" name="submit" value="Signup" style="width: 180px;color:white">
        </div>

      </form>
    </div>

  </div>
  {{>footer}}
  <script src="/js/app.js"> </script>

</body>

</html>