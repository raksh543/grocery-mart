</head>

<body>
    <div class="container">

        <div class="row">
            <div class="MultiCarousel" data-items="1,3,5,6" data-slide="1" id="MultiCarousel" data-interval="1000">
                <div class="MultiCarousel-inner">
                    {{# each products}}
                    {{# each this}}
                    <div class="item">
                        <div class="pad15">
                            {{!-- <p class="lead">Multi Item Carousel</p> --}}
                            <center>
                                <img src="{{this.imagePath}}" alt="" class="img-responsive" style="max-height: 150px;">
                            </center>
                            <p>â‚¹ 1</p>
                            <p>{{this.description}}</p>
                            <p>50% off</p>
                            <a href="cart/{{this._id}}" class="addtocart pull-center"
                                style="background-color:#008000;color:white;padding:10px 12px;"><span><i
                                        class="fa fa-cart-plus" style="color: white;" aria-hidden="true"></i></span> Add
                                to cart</a>
                        </div>
                    </div>
                    {{/each}}
                    {{/each}}
                </div>
                <button class="btn btn-primary leftLst">
                    << /button>
                        <button class="btn btn-primary rightLst">></button>
            </div>


        </div>

